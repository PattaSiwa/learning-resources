<%- include('./partials/header.ejs') %>
    <link rel="stylesheet" href="/CSS/form-style.css">
    <title>Sandbox</title>
    </head>

    <body>
        <%- include('./partials/navbar.ejs') %>
            <main>
                <div class="container">

                    <div class="sidebar sidebar-edit"></div>

                    <div class="form-container">
                        <h1>EDITING <span>
                                <%= resource.name.toUpperCase() %>
                            </span>
                        </h1>

                        <form action="/resource/<%= resource.id %>?_method=PUT" method="POST">

                            <fieldset>

                                <legend>Resource Information</legend>

                                <label for="subject">SUBJECT</label>
                                <select name="subject" id="subject">
                                    <% if(resource.subject==="Math" ) { %>
                                        <option value="Math" selected>Math</option>
                                        <% } else if(resource.subject==="Language" ) %>
                                            <option value="Language">Language</option>
                                            <option value="Games">Games</option>
                                            <option value="Science">Science</option>
                                            <option value="Job-Readiness">Job Readiness</option>
                                            <option value="Independent-Living">Independent Living</option>
                                            <option value="Other">Other</option>
                                </select>

                                <label for="name">NAME</label>
                                <input class="text-input" id="name" name="name" type="text"
                                    value="<%= resource.name %>" />

                                <label for="url">URL</label>
                                <input class="text-input" id="url" name="url" type="text" value="<%= resource.url %>">


                                <label for="biography">DESCRIPTION</label>

                                <textarea id="description" name="description"
                                    value="<%= resource.description %>"></textarea>
                                <label for="img">IMAGE LINK</label>
                                <input class="text-input" id="img" name="img" type="text" value="<%= resource.img %>">
                            </fieldset>


                            <input type="submit" value="SUBMIT CHANGES">
                        </form>
                    </div>
                </div>
            </main>
            <%- include('./partials/footer.ejs') %>
    </body>

    </html>